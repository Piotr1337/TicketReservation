@model TicketReservation.Domain.Entities.Events

@{
    ViewBag.Title = Model.EventName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="thumbnail">
                <img src="@Url.Action("GetImage", "Event", new {Model.EventID})" alt="">
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
            <p class="eventTitle">@Model.EventName</p>
            <p>@Model.OtherDetails</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-12">
            <div class="agenda">
                <div class="table-responsive">
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr class="headers">
                                <th>Data</th>
                                <th>Godzina</th>
                                <th>Tytuł</th>
                                <th>Miejsce</th>
                                <th>Cena</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tickets in Model.Ticket.Where(x => x.EventID == Model.EventID))
                            {

                                    <!-- Single event in a single day -->
                                <tr class="ticketTable">
                                    <td class="agenda-date" rowspan="1">
                                        <div class="dayofmonth">@tickets.DateOfEvent.Day</div>
                                        <div class="dayofweek">@tickets.DateOfEvent.ToString("dddd")</div>
                                            <div class="shortdate text-muted">@tickets.DateOfEvent.ToString("MMMM"), @tickets.DateOfEvent.Year</div>
                                        </td>
                                        <td class="agenda-time">
                                            <i class="glyphicon glyphicon-time text-muted"></i>
                                            @tickets.DateOfEvent.TimeOfDay
                                        </td>
                                        <td class="agenda-events">
                                            <div class="agenda-event">
                                                <i class="glyphicon glyphicon-tag text-muted"></i>
                                                @tickets.Title
                                            </div>
                                        </td>
                                        <td class="agenda-places">
                                            <div class="agenda-place">
                                                <i class="glyphicon glyphicon-map-marker text-muted"></i>
                                                @tickets.Location
                                            </div>
                                        </td>
                                        <td class="agenda-prices">
                                            <div class="agenda-price">
                                                @tickets.Price zł
                                            </div>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

