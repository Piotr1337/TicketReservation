@model TicketReservation.Models.EventsViewModel

@{
    ViewBag.Title = Model.Event.EventName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid body-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="thumbnail">
                        <img src="@Url.Action("GetImage", "Event", new {Model.Event.EventID})" class="img-responsive center-block">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <article>
                        <p class="eventTitle">@Model.Event.EventName</p>
                        <p>@Html.Raw(Model.Event.OtherDetails)</p>
                    </article>
                </div>
            </div>
            @Html.Partial("TicketSummary", Model.Event)
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Panel title</h3>
                </div>
                @foreach (var artist in Model.Artists)
                {
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <img src="@Url.Action("GetImage", "Admin", new {artist.ArtistID})" class="img-responsive center-block">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 artistInfo">
                                <h4><a>@artist.Nickname</a></h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
