@using System.Activities.Statements
@using TicketReservation.Domain.Entities

@model TicketReservation.Models.AdminViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h2>Edycja @Model.EventName</h2>
    </div>
</div>
@using (Html.BeginForm("Edit", "Admin",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-6">
        <div class="panel-body">
            @Html.HiddenFor(x => x.EventID)
            @foreach (var item in ViewData.ModelMetadata.Properties)
            {
                switch (item.PropertyName)
                {
                    case "Categories":
                        @*@Html.DropDownListFor(model => model.Categories.FirstOrDefault().EventCategoryName,
                Model.Categories.Select(x => new SelectListItem { Text = x.EventCategoryName, Value = x.EventCategoryID.ToString() }))*@
                        @Html.DropDownListFor(m => m.EventCategoryID, new SelectList(Model.Categories.Select(x => new KeyValuePair<string,int>(x.EventCategoryName, x.EventCategoryID)), "Value", "Key"))
                        break;
                    case "SubCategories":
                        @*@Html.DropDownListFor(model => model.SubCategories.FirstOrDefault().EventSubCategoryName,
                            Model.SubCategories.Select(x => new SelectListItem { Text = x.EventSubCategoryName, Value = x.EventSubcategoryID.ToString() }))*@
                        break;
                    default:
                                    <div class="form-group">
                                        <label>@(item.DisplayName ?? item.PropertyName)</label>
                                        @if (item.PropertyName == "OtherDetails")
                                        {
                                            @Html.TextArea(item.PropertyName, null, new {@class = "form-control", rows = 5})
                                        }
                                        else if (item.PropertyName == "EventStartDateTime" || item.PropertyName == "EventEndDateTime" || item.PropertyName == "TicketsOnSaleDateTime")
                                        {
                                            <div class='input-group date datetimepicker1'>
                                                @Html.TextBox(item.PropertyName, null, new { @class = "form-control" })
                                                    <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        }                                        
                                        else
                                        {
                                            @Html.TextBox(item.PropertyName, null, new {@class = "form-control"})
                                        }
                                        @Html.ValidationMessage(item.PropertyName)
                                    </div>
                                    break;
                            }
                        }
        </div>
    </div>
    <div class="panel-footer col-md-12">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        @Html.ActionLink("Anuluj i wróć do listy", "Index", null, new
   {
       @class = "btn btn-default"
   })
    </div>
}



