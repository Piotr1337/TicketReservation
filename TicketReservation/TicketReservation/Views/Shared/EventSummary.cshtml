@model TicketReservation.Domain.Entities.Event

<div class="col-xs-12 col-sm-6 col-md-3">
    <div class="thumbnail">
        @if (Model.ImageData != null)
        {
            <img src="@Url.Action("GetImage", "Event", new {Model.EventID})" alt="">
        }
        <div class="caption">
            <h4>@Model.EventName</h4>
            <b>Data rozpoczęcia: </b>
            <p>@Model.EventStartDateTime.Date.ToLongDateString()</p>
            <b>Data zakończenia: </b>
            <p>@Model.EventEndDateTime.Date.ToLongDateString()</p>
            <p>
                <a href="#" class="btn btn-primary btn-xs" role="button">Button</a> <a href="#" class="btn btn-default btn-xs" role="button">Button</a>
            </p>
        </div>
    </div>
</div>



